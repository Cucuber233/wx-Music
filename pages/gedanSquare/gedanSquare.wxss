/* 歌单广场 */

.songSheet_wrap {
    display: flex;
    flex-wrap: wrap;
    padding: 5rpx;
    justify-content: space-around;
}

.songSheet_wrap_active {
    display: flex;
    flex-wrap: wrap;
    padding: 5rpx;
    justify-content: space-around;
    margin-bottom: 100rpx;
}

.songSheet_item {
    width: 30%;
    margin-bottom: 20rpx;
}

.songSheet_img {
    position: relative;
}

.songSheet_img image {
    width: 100%;
    border-radius: 15rpx;
    height: 220rpx
}

.songSheet_img .songSheet_info {
    position: absolute;
    top: 5rpx;
    right: 5rpx;
    width: 100%;
    display: flex;
    justify-content: flex-end;
    color: #fff;
    font-size: 24rpx;
}

.songSheet_titles {
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

/* 选择分类 */

#catewrap {
    padding: 0 15rpx;
    box-sizing: border-box;
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 100;
    left: 0;
    top: 0;
    background-color: #fff;
}

.close {
    width: 78rpx;
    height: 78rpx;
    background-size: 100% auto;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,)
}

#closecatelist {
    margin: 15rpx auto;
}

.catelist {
    margin-bottom: 20rpx;
    overflow: hidden;
    padding-bottom: 2rpx;
}

.cl_list {
    width: 179rpx;
    border: 1rpx solid #eee;
    text-align: center;
    height: 90rpx;
    font-size: 26rpx;
    line-height: 90rpx;
    overflow: hidden;
    position: relative;
    z-index: 1;
    margin: 0 -1rpx -1rpx 0;
    float: left;
}

.cl_ico {
    height: 182rpx;
    line-height: 1;
}

.cl_ico image {
    width: 80rpx;
    height: 80rpx;
    margin: 35rpx auto 15rpx;
    display: block;
}

#cateall {
    float: none;
    width: auto;
    margin: 20rpx auto;
}

.cl_ico_checked, .cl_ico_hot {
    content: "";
    position: absolute;
}

.cl_ico_hot {
    background-image: url(data:image/png;base64,);
    width: 56rpx;
    height: 56rpx;
    left: 0;
    top: 0;
    background-size: 100% 100%;
}

.cl_ico_checked {
    background-image: url(data:image/png;base64,);
    width: 38rpx;
    height: 38rpx;
    background-position: right bottom;
    right: 0;
    bottom: 0;
    background-size: 48rpx 48rpx;
}

.checked {
    border-color: #bb2c08;
    z-index: 2;
}

