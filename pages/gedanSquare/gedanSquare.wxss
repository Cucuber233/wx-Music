@import "../../template/loading/loading.wxss";
.gedan_tab {
    padding: 40rpx 20rpx;
    display: flex;
    justify-content: space-between;
}

.gedan_select {
    border-left: 6rpx solid #3c9;
    /* height: 10rpx; */
}

.gedan_select text {
    text-align: center;
    font-size: 30rpx;
    padding-left: 20rpx;
}

